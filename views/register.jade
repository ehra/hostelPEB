extends home

block content	
 .container(style="margin-top:5%;margin-bottom:7%;")
  .row
   .col.s12.m8.offset-m2.l8.offset-l2
    .card.white
     .card-content.black-text
      span.card-title Registration

      form(action="/register",method="post")
       .row
        div.input-field.col.s12.m6
         input.validate(id="first_name" name="first_name" type="text")
         label(for="first_name") First Name

        div.input-field.col.s12.m6
         input.validate(id="last_name" name="last_name" type="text")
         label(for="last_name") Last Name

       .row
        div.input-field.col.s12
         input.validate(id="pass_key" name="pass_key" type="text")
         label(for="pass_key") Passkey

       .row
        div.input-field.col.s12
         input.validate(id="roll_num" name="row_num" type="text")
         label(for="roll_num") Roll Number

       .row
        div.input-field.col.s12
        label DOB
         input(id="dob" placeholder="Date of Birth" class="datepicker" name="dob" type="date")

         
       .row
        div.input-field.col.s12
         input.validate(id="mob_num" name="mob_num" type="tel" )
         label(for="mob_num") Mobile Number
         
         .row
          div.actions
           input(type="submit", value="add")

script.
 $('.datepicker').pickadate({
    selectMonths: true, // Creates a dropdown to control month
    selectYears: 15 // Creates a dropdown of 15 years to control year
  });

