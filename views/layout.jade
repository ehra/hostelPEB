doctype html
html(lang='en')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1.0')
    title Starter Template - Materialize
    // CSS
    //link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
    link(href='stylesheets/materialize.min.css', type='text/css', rel='stylesheet', media='screen,projection')
    link(href='stylesheets/style.css', type='text/css', rel='stylesheet', media='screen,projection')
  body.grey.lighten-5
   nav.red.lighten-1(role='navigation')
     .nav-wrapper.container
        a#logo-container.brand-logo(href='#') Logo
        ul.right.hide-on-med-and-down
         
   block content      
    #index-banner.section.no-pad-bot
      .container
        br
        br
        .row.center
          h5.header.col.s12.light Test Page
        
        br

        .col.s12.m4.offset-m4.l4.offset-l4
         .card.white
          .card-content.black-text
           span.card-title.black-text="Log-In"
          form.s12.m4.offset-m4.l4.offset-l4
            .row
             .input-field.container
              input(placeholder="Roll No." id="rollNo")

            .row
             .input-field.container
              input(placeholder="Password" id="pass" class="validate" type="password")  
          br
          .button.waves-effect.waves-light.btn.blue.lighten-1white-text(type="submit" name="action" href="#" style="float:right;margin-top:1em;margin-right:1em;") Submit
    br
    br
  footer.page-footer.indigo.darken-1
    .container-fluid
      .row
        .col.s12.center 
          p(style="color:#fff;") @EHRA 2016
