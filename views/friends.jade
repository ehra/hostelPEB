extends home

block content	
 
 include messages
 
 .container(style="margin-top:5%;margin-bottom:7%;")
  .row
    .col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-3.well 
     h2(style="text-align: center") Group Registration
     form(action="/friends",method="post")
      .form-group
        label(for="passkey") Your Passkey
        input.form-control.validate(id="passkey" name="passkey" type="text" required)

      .form-group  
       label(for="comp_passkey") Friend's Passkey
       input.form-control.validate(id="comp_passkey" name="comp_passkey" type="text" required)

      .form-group
       label(for="pass_word") Password
       input.form-control.validate(id="pass_word" name="password" type="password" required)

      .form-group
       label(for="pass_word") Confirm Password
       input.form-control.validate(id="pass_word2" name="conf_password" type="password" required)
         
     input.btn.btn-success(type="submit", value="Submit" style="float:right")
 
         
